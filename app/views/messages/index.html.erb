<div class="panel panel-default">
  <div class="panel-heading">
    メッセージ一覧
  </div>
    
  <div class="panel-body">
    <% @messages.each do |message| %>
      <span class="label label-info"><%= message.name %></span>
      <%= message.body %>
      <br>
    <% end %>
  </div>
</div>

<%= form_for(@message) do |f| %>
  <div class="row">
  <div class="col-sm-3">名前:<br>
  <%= f.text_field :name %></div>
  <div class="col-sm-7">内容:<br>
  <%= f.text_area :body ,:size=>"50*10"%></div>
  <br>
  <div class="col-sm-2">
  <%= f.submit class: "btn btn-sm btn-primary" %></div>
<% end %>
  </div>


    
