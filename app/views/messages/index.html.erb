<div class="panel panel-primary">
  <div class="panel-heading">
    メッセージ一覧
  </div>
    
  <div class="panel-body">
    <% @messages.each do |message| %>
      <span class="label label-info"><%= message.name %></span>
      <%= message.body %>
      <br>
    <% end %>
  </div>
</div>

<div class="form-horizontal">
<%= form_for(@message) do |f| %>
  <div class="form-group">
  <label for="message_name" class="col-sm-2 control-label">名前:</label>
    <div class="col-sm-10">
    <%= f.text_field :name, placeholder: "Enter your name" %>
    </div>
   </div>
   <div class="form-group">
  <label for="message_body" class="col-sm-2 control-label">内容:</label>
    <div class="col-sm-10">
    <%= f.text_area :body,rows: 3 ,placeholder: "Enter your message"%>
    </div>
   </div>
   <div class="form-group">
     <div class="col-sm-offset-2 col-sm-10">
    <%= f.submit class: "btn btn-sm btn-primary" %>
    </div>
   </div>
<% end %>
</div>

