<div class="panel panel-primary">
  <div class="panel-heading">
    メッセージ一覧
  </div>
    
  <div class="panel-body">
    <table class="table table-hover table-condensed">
      <thead>
        <tr><th width="250">名前</th><th width="750">メッセージ</th></tr>
      </thead>
      <tbody>
    <% @messages.each do |message| %>
        <tr><td width="250"><span class="glyphicon glyphicon-user label label-info"><%= message.name %></span></td>
        <td width="750"><%= message.body %></td>
        </tr>
    <% end %>
      </tbody>
    </table>
  </div>
</div>


<div class="form-horizontal">
<%= form_for(@message) do |f| %>
  <div class="form-group">
  <label for="message_name" class="col-sm-2 control-label">名前:</label>
    <div class="col-sm-10">
    <%= f.text_field :name, placeholder: "Enter your name" %>
    </div>
   </div>
   <div class="form-group">
  <label for="message_body" class="col-sm-2 control-label">内容:</label>
    <div class="col-sm-10">
    <%= f.text_area :body,rows: 3 ,placeholder: "Enter your message"%>
    </div>
   </div>
   <div class="form-group">
     <div class="col-sm-offset-2 col-sm-10">
    <%= f.submit class: "btn btn-sm btn-primary" %>
    </div>
   </div>
<% end %>
</div>

