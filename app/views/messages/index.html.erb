<div class="panel panel-primary">
  <div class="panel-heading">
    メッセージ一覧
  </div>
    
  <div class="panel-body">
    <table class="table table-hover table-condensed">
      <thead>
        <tr><th width="250">名前</th><th width="750">メッセージ</th></tr>
      </thead>
      <tbody>
    <% @messages.each do |message| %>
        <tr><td width="250"><span class="glyphicon glyphicon-user label label-info"><%= message.name %></span></td>
        <td width="750"><%= message.body %></td>
        <td>
    <%= link_to "edit", edit_message_path(message) %>
        </td>
        </tr>
    <% end %>
      </tbody>
    </table>
  </div>
</div>



<%= render 'form' %>